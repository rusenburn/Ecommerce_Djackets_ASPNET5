@model ProductForm

@{
    ViewData["Title"] = "Upsert";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Upsert" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Slug" class="control-label"></label>
                <input asp-for="Product.Slug" class="form-control" />
                <span asp-validation-for="Product.Slug" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" asp-items="@(new SelectList(Model.Categories,nameof(Category.Id),nameof(Category.Name)))" class="form-control" >
                    <option value="">Pick One</option>
                    </select>
                <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <textarea rows="3" asp-for="Product.Description" class="form-control" ></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>

            </div>


            <div class="form-group">
                <label>Image</label>
                <input type="file" asp-for="imageFile" class="form-control-file" />
                <span asp-validation-for="imageFile" class="text-danger"></span>
            </div>
                <input hidden asp-for="Product.Image"/>
                <input hidden asp-for="Product.Thumbnail">
                <input hidden asp-for="Product.DateAdded"/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
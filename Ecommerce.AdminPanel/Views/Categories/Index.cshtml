@model IEnumerable<Category>
@{

}

<a asp-action="Upsert" asp-route-id="0" class="btn btn-primary" >Create</a>

<h2 class="text-center">Categories list</h2>
<table class="table table-bordered table-striped mt-4">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model=>model.Id)</th>
            <th>@Html.DisplayNameFor(model=>model.Name)</th>
            <th>@Html.DisplayNameFor(model=>model.Slug)</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var category in Model)
        {
                <tr>
                    <td><a asp-action="Details" asp-route-id="@category.Id">@category.Id</a></td>
                    <td>@category.Name</td>
                    <td>@category.Slug</td>
                    <td>
                        <a asp-action="Upsert" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
        }
    </tbody>
</table>